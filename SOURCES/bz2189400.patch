             return
 
         refs = element_enter(inputs_images, "references", {})
+        manifest_lists = []
 
         for image in element_enter(mpp, "images", []):
             source = image["source"]
             name = image.get("name", source)
             digest = image.get("digest", None)
             tag = image.get("tag", None)
